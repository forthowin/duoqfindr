= render '/shared/content_title', title: 'Registration Page'

= bootstrap_form_for @user do |f|
  .form-group
    .col-sm-6
      = f.text_field :username
      = f.email_field :email
      = f.select :role, [['Top', 'top'], ['Mid', 'mid'], ['Jungle', 'jungle'], ['ADC', 'adc'], ['Support', 'support']]
      = f.select :tier, [['Unranked', 'unranked'], ['Bronze', 'bronze'], ['Silver', 'silver'], ['Gold', 'gold'], ['Platinum', 'platinum'], ['Diamond', 'diamond'], ['Master', 'master'], ['Challenger', 'challenger']]
      = f.password_field :password
      = f.form_group :terms do
        = f.check_box :terms, label: "I acknowledge that LeagueLocatr will be using my IP Address to determine my location"
      = f.submit 'Register', class: 'btn btn-primary'